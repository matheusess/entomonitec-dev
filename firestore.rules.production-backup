rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGRAS TEMPORÁRIAS PARA DESENVOLVIMENTO
    // ATENÇÃO: NUNCA USAR EM PRODUÇÃO!
    
    // Permitir acesso total para desenvolvimento
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
